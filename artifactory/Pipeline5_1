@Library('simple-pipeline')_
pipeline {
  agent {
    kubernetes {
      yaml """\
        apiVersion: v1
        kind: Pod
        metadata:
          labels:
            app: simple-app
        spec:
          containers:
          - name: app
            image: iptcp/gradle-app:0.3
            command:
            - cat
            tty: true
        """.stripIndent()
    }
  }
  
  stages {
    stage('Building app') {
      steps {
        sh './gradlew build'
      }  
    }
    
     stage('Running app') {
      steps {
        sh 'java -version'
        echo "Running gradle app"
        sh './gradlew run'
      }  
    }
    stage('Smoke test') {
      steps {
        echo 'Smoke test'
        sh './gradlew run | grep "Hello World!"'
      }  
    }
    stage ('Publish build info') {
            steps {
                rtUpload (
    serverId: 'itlabs',
    spec: '''{
          "files": [
            {
              "pattern": "app/build/distributions/*.tar",
              "target": "simple-pipeline/simple-app-files/"
            }
         ]
    }''',
)
   }
        }
  }

}