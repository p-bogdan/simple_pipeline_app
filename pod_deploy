pipeline {
  agent {
    kubernetes {
      //cloud 'kubernetes'
      defaultContainer 'simple-app'
      yaml """
kind: Pod
spec:
  containers:
  - name: simple-app
    image: iptcp/simple-app:0.5
    imagePullPolicy: IfNotPresent
    command: ["/bin/sh"]
    args: ["-c", "sleep 300"]
"""
    }
  }
  stages {
    stage('Deploying simple-app') {
      steps {
        echo "Deploying simple-app"
      }
    }
  }
}