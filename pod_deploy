pipeline {
  agent {
    kubernetes {
      yaml """\
        apiVersion: v1
        kind: Pod
        metadata:
          name: simple-app
          labels:
            app: simple-app
        spec:
          containers:
          - name: simple-app
            image: iptcp/simple-app:0.5
            command: ["/bin/sh"]
            #args: ["-c", "sh app/build/distributions/app/bin/app"]
            args: ['-c', 'sh app/build/distributions/app/bin/app']
            tty: true
        """.stripIndent()
    }
  }
  stages {
    stage('Deploy simple-app pod') {
      steps {
         echo 'Deploying simple-app'
        
      }
    }
  }
}