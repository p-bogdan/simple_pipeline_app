pipeline {
  agent {
    kubernetes {
      //cloud 'kubernetes'
      defaultContainer 'simple-app'
      yaml """
kind: Pod
spec:
  containers:
  - name: simple-app
    image: iptcp/simple-app:0.5
    imagePullPolicy: IfNotPresent
    command:
    - sleep
    args:
    - 30
"""
    }
  }
  stages {
    stage('Build with Kaniko') {
      steps {
        sh 'sh app/build/distributions/app/bin/app'
      }
    }
  }
}