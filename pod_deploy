pipeline {
  agent {
    kubernetes {
      //cloud 'kubernetes-plugin-test'
      label 'mypod'
      containerTemplate {
        name 'maven'
        image 'maven:3.3.9-jdk-8-alpine'
        ttyEnabled true
        command 'cat'
      }
    }
    environment {    
       gcp_project_id = 'lab-project-282605'  
     }
  }
    stages {
       stage('Obtain K8s credentials') {
            steps {
               echo 'Obtaining k8s credentials'
               sh "gcloud container clusters get-credentials k8s-lab --zone us-east1-b --project ${env.gcp_project_id}"
            }
       }
    }
  stages {
    stage('Run maven') {
      steps {
        sh 'mvn -version'
      }
    }
  }
}

