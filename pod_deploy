pipeline {
  agent {
    kubernetes {
      label 'app'
      containerTemplate {
        name 'maven'
        image 'maven:3.3.9-jdk-8-alpine'
        ttyEnabled true
        command 'cat'
      }
    }
  }
  stages {
    stage('Deploy simple-app') {
      steps {
        sh 'mvn -version'
      }
    }
  }
}