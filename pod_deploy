podTemplate(yaml: """\
    apiVersion: v1
    kind: Pod
    metadata:
      name: simple-app
      labels: 
        role: myrole
    spec:
      containers:
      - name: simple-pod-app
        image: iptcp/simple-app:0.5
        ports:
          - name: web
            containerPort: 80
            protocol: TCP
        #command:
        #- /bin/sh
        #args: ['-c', 'sh app/build/distributions/app/bin/app']
         


        tty: true
    """.stripIndent()) {
    node(POD_LABEL) {
      container('iptcp/simple-app:0.5') {
        echo POD_CONTAINER // displays 'busybox'
        sh "hostname"
      }
    }
}