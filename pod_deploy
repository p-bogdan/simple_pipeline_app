pipeline {
  agent {
    kubernetes {
      label 'app'
      containerTemplate {
        name 'app-template'
        image 'iptcp/simple-app:0.5'
        ttyEnabled true
        command '/bin/sh'
        args: ['-c', 'hostname']
      }
    }
  }
  stages {
    stage('Deploy simple-app') {
      steps {
        echo 'Deploying simple app'
      }
    }
  }
}