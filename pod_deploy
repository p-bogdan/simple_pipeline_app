pipeline {
  agent {
    kubernetes {
      yaml """\
        apiVersion: v1
        kind: Pod
        metadata:
          name: simple-app
          labels:
            some-label: some-label-value
        spec:
          containers:
          - name: jnlp
            image: iptcp/simple-app:0.5
            tty: true
        """.stripIndent()
    }
  }
  stages {
    stage('Deploy simple-app pod') {
      steps {
        container('maven') {
          sh 'app/build/distributions/app/bin/app'
        }
      }
    }
  }
}