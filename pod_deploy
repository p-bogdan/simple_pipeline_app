pipeline {
  agent {
    kubernetes {
      yaml """\
        apiVersion: v1
        kind: Pod
        metadata:
          name: simple-app
          labels:
            some-label: some-label-value
        spec:
          containers:
          - name: simple-app
            image: iptcp/simple-app:0.5
            command: command: ["/bin/sh"]
            args: ["-c", "sh app/build/distributions/app/bin/app"]
            tty: true
        """.stripIndent()
    }
  }
}