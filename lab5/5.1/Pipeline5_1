pipeline {
  agent {
    kubernetes {
      //cloud 'kubernetes'
      //defaultContainer ''
      yaml """
kind: Pod
spec:
  containers:
  - name: gradle-build
    image: iptcp/gradle-app:0.1
    imagePullPolicy: IfNotPresent
    command: ["./gradlew"]
    args: ["build; sleep 300"]
"""
    }
  }
  stages {
    stage('Building app') {
      steps {
        echo "Running gradle build"
      }
    }
    stage('Running app') {
      steps {
        echo "Running gradle app"
        sh './gradlew run'
      }
    }
    stage('Smoke test') {
      steps {
        echo 'Smoke test'
        sh './gradlew run | grep "Hello World!"'
        }
        }
    stage('Upload artifact to GCP storage') {
      steps {
        googleStorageUpload bucket: 'gs://simple-pipeline-artifact', credentialsId: 'simple-pipeline-app', pattern: 'app/build/distributions/*' 
        }
        }
    stage('Setting GCP bucket lifecycle') {
      steps {
        googleStorageBucketLifecycle bucket: 'gs://simple-pipeline-artifact', credentialsId: 'simple-pipeline-app', ttl: 300 
        }
        }
          
  }
}