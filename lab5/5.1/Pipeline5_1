pipeline {
  agent {
    kubernetes {
      //cloud 'kubernetes'
      //defaultContainer ''
      yaml """
kind: Pod
spec:
  containers:
  - name: gradle-build
    image: iptcp/gradle-app:0.1
    imagePullPolicy: IfNotPresent
    command: ["./gradlew"]
    args: ["build; sleep 300"]
"""
    }
  }
  stages {
    stage('Building app') {
      steps {
        echo "Running gradle build"
      }
    }
     stage('Running app') {
      steps {
        echo "Running gradle app"
        sh './gradlew run'
      }
    }
  }
}