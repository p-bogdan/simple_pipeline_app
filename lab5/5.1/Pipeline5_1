pipeline {
  agent {
    kubernetes {
      //cloud 'kubernetes'
      //defaultContainer ''
      yaml """
kind: Pod
spec:
  containers:
  - name: pipeline5-1-app
    image: hashicorp/terraform:0.14.8
    imagePullPolicy: IfNotPresent
    command: ["/bin/terraform"]
    args: ["init; sleep 300"]
"""
    }
  }
  stages {
    stage('Initializing terraform') {
      steps {
        echo "terraform init"
      }
    }
  }
}